{
  "name": "@stencila/hub",
  "version": "0.8.27",
  "author": "Stencila Hub Contributors (https://github.com/stencila/hub/graphs/contributors)",
  "license": "Apache-2.0",
  "devDependencies": {
    "@stencila/dev-config": "1.4.20"
  },
  "renovate": {
    "extends": [
      "@stencila"
    ],
    "schedule": [
      "before 12pm on Friday"
    ],
    "packageRules": [
      {
        "paths": ["package.json", "requirements.txt"],
        "depTypeList": ["dependencies"],
        "rangeStrategy": "pin"
      },
      {
        "groupName": "Python dev dependencies",
        "paths": ["requirements-dev.txt"],
        "rangeStrategy": "pin"
      },
      {
        "groupName": "Javascript dev dependencies",
        "paths": ["package.json"],
        "depTypeList": ["devDependencies"],
        "rangeStrategy": "pin"
      }
    ]
  }
}
